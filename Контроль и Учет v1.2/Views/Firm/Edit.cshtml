@model Контроль_и_Учет_v1._2.DB_ModelContext.Firms

@{
    ViewBag.Title = "Edit";
}

<h2>Редактирование информации фирмы</h2>
<h2> @Html.DisplayFor(model => model.TitleFirm)</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div class="form-group">
            <p>Название</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TitleFirm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TitleFirm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Юридический адрес</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdAddressLegal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdAddressLegal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Физический адрес</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdAddressActual, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdAddressActual, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Директор</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdDirector, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdDirector, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернутся", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
